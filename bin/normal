#!/bin/bash
tmux new-session -s Om -n nnn -d
tmux send-keys -t Om 'unclutter -idle 5 &; nnn -s a' C-m
tmux new-window -n mpd -t Om
tmux send-keys -t Om 'mpd; ncmpcpp' C-m
tmux new-window -n ViM -t Om
tmux send-keys -t Om 'cd ~/MEGAsync/wiki;nnn ' C-m
tmux new-window -n bash -t Om
tmux send-keys -t Om ' flatpak run nz.mega.MEGAsync & flatpak run org.chromium.Chromium google.com & sleep 1m ;kill %1 ; bash' C-m
tmux new-window -n zsh -t Om
tmux select-window -t Om:5
tmux attach -t Om
